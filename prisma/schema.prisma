enum Tag {
  WORK
  PERSONAL
  HOME
  MEDICAL
  BILLS
  OTHER
}

generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model  User {
  id  String  @id @default(uuid())
  clerkUserId String @unique
  email String @unique
  name String?
  imageUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  records Record[]
  notes Note[]
}

model Record{
  id String @id @default(uuid())
  text String  // description sort of text
  amount Float
  category String @default("Other")
  date DateTime @default(now())
  userId String
  user User @relation(fields:[userId], references: [clerkUserId], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@index([userId])

}




model Note{
  id String @id @default(uuid())
  title String 
  text String 
  tags Tag[]
  userId String
  user User @relation(fields: [userId], references: [clerkUserId],onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
}
